@model ImageGenerationModel

<div class="container mt-5">
    <div class="row justify-content-center h-100 overflow-scroll">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Chat Image Generator</h3>
                </div>
                <div class="card-body">
                    <form id="imageGeneratorForm" asp-action="GenerateImage" method="post">
                        <!-- Prompt Section -->
                        <div class="mb-4">
                            <h4 class="mb-3">Prompt</h4>
                            <div class="form-group">
                                <label asp-for="Prompt" class="form-label">Enter your image description:</label>
                                <textarea asp-for="Prompt" class="form-control" rows="3" placeholder="Describe the image you want to generate..."></textarea>
                                <span asp-validation-for="Prompt" class="text-danger"></span>
                            </div>
                            <div class="d-grid gap-2 mt-3">
                                <button type="submit" class="btn btn-success">Generate Image</button>
                            </div>
                        </div>
                    </form>

                    <!-- Result Section -->
                    <div id="resultSection" style="display: none;">
                        <h4 class="mb-3">Result</h4>
                        <div class="form-group mb-3">
                            <label for="revisedPrompt" class="form-label">Revised Prompt:</label>
                            <textarea class="form-control" id="revisedPrompt" rows="2" readonly></textarea>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Generated Image:</label>
                            <div class="text-center mt-2">
                                <img id="imageUrl" src="" class="img-fluid rounded" alt="Generated image" style="max-height: 400px;">
                            </div>
                        </div>
                        <div class="d-grid gap-2 mt-3">
                            <button type="button" class="btn btn-primary" onclick="regenerateImage()">Regenerate</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            $('#imageGeneratorForm').submit(function(e) {
                e.preventDefault();

                $('#resultSection').hide();

                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function(response) {
                        $('#revisedPrompt').val(response.revisedPrompt);
                        $('#imageUrl').attr('src', response.imageUrl);
                        $('#resultSection').show();
                    },
                    error: function(xhr) {
                        alert('Error generating image');
                    }
                });
            });
        });

        function regenerateImage() {
            // Re-submit the form
            $('#imageGeneratorForm').submit();
        }
    </script>
}